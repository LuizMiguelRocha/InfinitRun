                VerticalOptions="End"
                HeightRequest="115"
                WidthRequest="115"/>

        <Image Source="pizzaum.png"
                HorizontalOptions="End"
                VerticalOptions="End"
                HeightRequest="150"
                WidthRequest="150"/> 

        <Image Source="pizzarefri.png"
                HorizontalOptions="Start"
                VerticalOptions="End"
                HeightRequest="150"
                WidthRequest="150"/>        

        </HorizontalStackLayout>     

        
        <HorizontalStackLayout x:Name="HSLayerChao">
        <Image
            HorizontalOptions="Fill"
            Source="piso.png"
            VerticalOptions="End"
            WidthRequest="1000" />

        <Image
            HorizontalOptions="Fill"
            Source="piso.png"
            VerticalOptions="End"
